<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="button_green" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/button_design</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="elevation">0dp</item>
        <item name="android:padding">@dimen/_15sdp</item>
        <item name="android:textSize">@dimen/_15sdp</item>
    </style>

    <style name="buttonNormal" parent="button_green">
        <item name="android:textColor">@color/dark_text_color</item>
        <item name="android:background">@drawable/button_basic</item>
        <item name="android:paddingLeft">@dimen/_20sdp</item>
    </style>

    <style name="darkTitle">
        <item name="android:textColor">@color/dark_text_color</item>
        <item name="android:textSize">@dimen/_22sdp</item>
    </style>


    <style name="lightText">
        <item name="android:textColor">@color/light_text_color</item>
        <item name="fontWeight">700</item>
        <item name="android:textSize">@dimen/_14sdp</item>
    </style>


    <style name="textInputLayout">
        <item name="hintEnabled">false</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
    </style>

    <style name="editText">
        <item name="android:background">@drawable/edittext_background</item>
        <item name="android:padding">@dimen/_15sdp</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

</resources>